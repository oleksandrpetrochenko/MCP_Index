<%- include('layout', { body: `
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Breadcrumb -->
  <nav class="mb-6 text-sm text-gray-500">
    <a href="/" class="hover:text-gray-300">Home</a>
    <span class="mx-2">/</span>
    <a href="/servers" class="hover:text-gray-300">Servers</a>
    ${server.category ? `<span class="mx-2">/</span><a href="/category/${server.category.slug}" class="hover:text-gray-300">${server.category.name}</a>` : ''}
    <span class="mx-2">/</span>
    <span class="text-gray-300">${server.name}</span>
  </nav>

  <!-- Header -->
  <div class="bg-gray-900 border border-gray-800 rounded-xl p-6 mb-6">
    <div class="flex flex-col sm:flex-row sm:items-start justify-between gap-4">
      <div class="flex-1">
        <h1 class="text-2xl font-bold text-white">${server.name}</h1>
        ${server.author ? `<p class="text-gray-400 text-sm mt-1">by ${server.author}</p>` : ''}
        ${server.description ? `<p class="text-gray-300 mt-3">${server.description}</p>` : ''}
      </div>
      ${server.qualityScore ? `
      <div class="shrink-0 text-center">
        <div class="w-16 h-16 rounded-full border-4 flex items-center justify-center text-lg font-bold
          ${server.qualityScore >= 70 ? 'border-green-500 text-green-400' : server.qualityScore >= 40 ? 'border-yellow-500 text-yellow-400' : 'border-gray-600 text-gray-400'}">
          ${server.qualityScore}
        </div>
        <div class="text-xs text-gray-500 mt-1">Quality</div>
      </div>` : ''}
    </div>

    <!-- Stats Row -->
    <div class="flex flex-wrap gap-4 mt-5 pt-5 border-t border-gray-800">
      ${server.stars ? `
      <div class="flex items-center gap-1.5 text-sm text-gray-400">
        <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
        ${server.stars.toLocaleString()} stars
      </div>` : ''}
      ${server.weeklyDownloads ? `
      <div class="text-sm text-gray-400">${server.weeklyDownloads.toLocaleString()} downloads/wk</div>` : ''}
      ${server.version ? `<div class="text-sm text-gray-400">v${server.version}</div>` : ''}
      ${server.license ? `<div class="text-sm text-gray-400">${server.license}</div>` : ''}
    </div>

    <!-- Links -->
    <div class="flex flex-wrap gap-3 mt-4">
      ${server.repositoryUrl ? `<a href="${server.repositoryUrl}" target="_blank" rel="noopener" class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-gray-800 border border-gray-700 rounded-lg text-sm text-gray-300 hover:bg-gray-700 transition-colors">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
        Repository
      </a>` : ''}
      ${server.npmPackage ? `<a href="https://www.npmjs.com/package/${server.npmPackage}" target="_blank" rel="noopener" class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-gray-800 border border-gray-700 rounded-lg text-sm text-gray-300 hover:bg-gray-700 transition-colors">
        npm
      </a>` : ''}
      ${server.homepage ? `<a href="${server.homepage}" target="_blank" rel="noopener" class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-gray-800 border border-gray-700 rounded-lg text-sm text-gray-300 hover:bg-gray-700 transition-colors">
        Homepage
      </a>` : ''}
    </div>
  </div>

  <!-- Install Command -->
  ${server.installCommand ? `
  <div class="bg-gray-900 border border-gray-800 rounded-xl p-6 mb-6">
    <h2 class="text-lg font-semibold text-white mb-3">Install</h2>
    <div class="bg-gray-950 rounded-lg p-4 font-mono text-sm text-green-400 overflow-x-auto">
      ${server.installCommand}
    </div>
  </div>` : ''}

  <!-- Tools -->
  ${server.tools && server.tools.length > 0 ? `
  <div class="bg-gray-900 border border-gray-800 rounded-xl p-6 mb-6">
    <h2 class="text-lg font-semibold text-white mb-4">Tools <span class="text-gray-500 text-sm font-normal">(${server.tools.length})</span></h2>
    <div class="space-y-3">` +
      server.tools.map(tool => `
      <div class="bg-gray-950 rounded-lg p-4">
        <div class="font-medium text-brand-400 text-sm font-mono">${tool.name}</div>
        ${tool.description ? `<p class="text-gray-400 text-sm mt-1">${tool.description}</p>` : ''}
      </div>`).join('') + `
    </div>
  </div>` : ''}

  <!-- Resources -->
  ${server.resources && server.resources.length > 0 ? `
  <div class="bg-gray-900 border border-gray-800 rounded-xl p-6 mb-6">
    <h2 class="text-lg font-semibold text-white mb-4">Resources <span class="text-gray-500 text-sm font-normal">(${server.resources.length})</span></h2>
    <div class="space-y-3">` +
      server.resources.map(resource => `
      <div class="bg-gray-950 rounded-lg p-4">
        <div class="font-medium text-brand-400 text-sm font-mono">${resource.uri}</div>
        ${resource.name ? `<div class="text-gray-300 text-sm mt-1">${resource.name}</div>` : ''}
        ${resource.description ? `<p class="text-gray-400 text-sm mt-1">${resource.description}</p>` : ''}
      </div>`).join('') + `
    </div>
  </div>` : ''}

  <!-- Prompts -->
  ${server.prompts && server.prompts.length > 0 ? `
  <div class="bg-gray-900 border border-gray-800 rounded-xl p-6 mb-6">
    <h2 class="text-lg font-semibold text-white mb-4">Prompts <span class="text-gray-500 text-sm font-normal">(${server.prompts.length})</span></h2>
    <div class="space-y-3">` +
      server.prompts.map(prompt => `
      <div class="bg-gray-950 rounded-lg p-4">
        <div class="font-medium text-brand-400 text-sm font-mono">${prompt.name}</div>
        ${prompt.description ? `<p class="text-gray-400 text-sm mt-1">${prompt.description}</p>` : ''}
      </div>`).join('') + `
    </div>
  </div>` : ''}

  <!-- Back -->
  <div class="mt-8">
    <a href="/servers" class="text-brand-400 hover:text-brand-300 text-sm">&larr; Back to all servers</a>
  </div>
</div>
` }) %>
