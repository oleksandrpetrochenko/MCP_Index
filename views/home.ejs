<%- include('layout', { body: `
<div class="relative overflow-hidden">
  <!-- Hero -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
    <div class="text-center">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight">
        Discover <span class="text-brand-400">${stats.totalServers.toLocaleString()}+</span> MCP Servers
      </h1>
      <p class="mt-4 text-lg text-gray-400 max-w-2xl mx-auto">
        Quality-ranked directory of Model Context Protocol servers. Find the right MCP server for your AI workflows.
      </p>
      <form action="/servers" method="GET" class="mt-8 max-w-xl mx-auto">
        <div class="flex gap-2">
          <input
            type="text"
            name="search"
            placeholder="Search MCP servers... (e.g. database, github, slack)"
            class="flex-1 bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-gray-200 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
          >
          <button type="submit" class="bg-brand-600 hover:bg-brand-700 text-white px-6 py-3 rounded-lg font-medium transition-colors">
            Search
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Stats -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
      <div class="bg-gray-900 border border-gray-800 rounded-xl p-4 text-center">
        <div class="text-2xl font-bold text-white">${stats.totalServers.toLocaleString()}</div>
        <div class="text-xs text-gray-500 mt-1">MCP Servers</div>
      </div>
      <div class="bg-gray-900 border border-gray-800 rounded-xl p-4 text-center">
        <div class="text-2xl font-bold text-white">${categories.length}</div>
        <div class="text-xs text-gray-500 mt-1">Categories</div>
      </div>
      <div class="bg-gray-900 border border-gray-800 rounded-xl p-4 text-center">
        <div class="text-2xl font-bold text-white">${stats.topCategories.length > 0 ? stats.topCategories[0].name : 'N/A'}</div>
        <div class="text-xs text-gray-500 mt-1">Top Category</div>
      </div>
      <div class="bg-gray-900 border border-gray-800 rounded-xl p-4 text-center">
        <div class="text-2xl font-bold text-white">5-Signal</div>
        <div class="text-xs text-gray-500 mt-1">Quality Scoring</div>
      </div>
    </div>
  </div>

  <!-- Categories -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
    <h2 class="text-xl font-semibold text-white mb-6">Browse by Category</h2>
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3">` +
      categories.filter(c => Number(c.serverCount) > 0).slice(0, 8).map(cat => `
      <a href="/category/${cat.slug}" class="bg-gray-900 border border-gray-800 rounded-lg p-4 hover:border-brand-500/50 transition-all group">
        <div class="font-medium text-white group-hover:text-brand-400 transition-colors text-sm">${cat.name}</div>
        <div class="text-xs text-gray-500 mt-1">${Number(cat.serverCount).toLocaleString()} servers</div>
      </a>`).join('') + `
    </div>
    <div class="mt-4 text-center">
      <a href="/servers" class="text-brand-400 hover:text-brand-300 text-sm">View all categories &rarr;</a>
    </div>
  </div>

  <!-- Featured Servers -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
    <h2 class="text-xl font-semibold text-white mb-6">Top Quality Servers</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">` +
      featured.map(server => `
      <a href="/servers/${server.slug}" class="block bg-gray-900 border border-gray-800 rounded-xl p-5 hover:border-brand-500/50 hover:bg-gray-900/80 transition-all group">
        <div class="flex items-start justify-between gap-3 mb-3">
          <h3 class="font-semibold text-white group-hover:text-brand-400 transition-colors truncate text-sm">${server.name}</h3>
          ${server.qualityScore ? `<span class="shrink-0 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium ${server.qualityScore >= 70 ? 'bg-green-900/50 text-green-400' : server.qualityScore >= 40 ? 'bg-yellow-900/50 text-yellow-400' : 'bg-gray-800 text-gray-400'}">${server.qualityScore}</span>` : ''}
        </div>
        <p class="text-gray-400 text-xs line-clamp-2 mb-3 min-h-[2rem]">${server.description || 'No description available'}</p>
        <div class="flex items-center gap-3 text-xs text-gray-500">
          ${server.stars ? `<span>${server.stars.toLocaleString()} &#9733;</span>` : ''}
          ${server.category ? `<span class="text-brand-400/70">${server.category.name}</span>` : ''}
        </div>
      </a>`).join('') + `
    </div>
  </div>
</div>
` }) %>
